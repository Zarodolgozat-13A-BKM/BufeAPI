            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Érvénytelen bejelentkezési adatok"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
